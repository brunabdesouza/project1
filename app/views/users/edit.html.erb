<div class="hello"><h2>Edit your details</h2></div>

<%= form_with model: @user, local: true, html: { multipart: true } do |f| %>

<div class="formbody">
<%= f.label :name%>
<%= f.text_field :name %>
<br>

<%= f.label :email%>
<%= f.text_field :email %>
<br>

<%= f.label :password%>
<%= f.password_field :password %>
<br>

<%= f.submit 'Update' %>
</div>
<% end %>
