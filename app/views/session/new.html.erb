<div class="hello"><h2>Login</h2></div>

<% if flash[:error] %>
  <br>
    <strong>
      <%= flash[:error] %>
    </strong>
  <br>
  <br>
<% end %>

<!-- use form_with for generic forms, i.e. forms not connected to a model -  then we use 'url: someurl' instead of 'model:' -->
<%= form_with url:login_path, local: true do |f| %>

  <div class="formbody">
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
    <br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <br>

    <%= f.submit  'Login' %>
  </div>

<% end %>
